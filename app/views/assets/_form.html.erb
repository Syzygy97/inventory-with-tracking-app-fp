<%= form_with(model: [@category, @asset], data: { turbo: false }) do |form| %>
  <% if @asset.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@asset.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% @asset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "asset-form">
    <div>
      <%= form.label :name %>
      <%= form.text_field :name , class: "asset-form-name"%>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.text_area :description, class: "asset-form-description"%>
    </div>

    <div>
      <%= form.label :classification %>
      <%= form.number_field :classification, class: "asset-form-classification"%>
    </div>

    <div>
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: "asset-form-quantity"%>
    </div>

    <div>
      <%= form.label :status %>
      <%= form.number_field :status, class: "asset-form-status"%>
    </div>

    <div>
      <%= form.label :invoice_number %>
      <%= form.number_field :invoice_number, class: "asset-form-invoice"%>
    </div>

    <div>
      <%= form.label :purchase_date %>
      <%= form.date_field :purchase_date, class: "asset-form-purchase-date"%>
    </div>

    <%# <div> %>
      <%# <%= form.number_field :user_id, value: current_user.id, id: :category_user_id, type: :hidden %> 
    <%# </#div> %>
  </div>

  <div class="asset-submit-btn">
    <%= form.submit %>
  </div>

<% end %>