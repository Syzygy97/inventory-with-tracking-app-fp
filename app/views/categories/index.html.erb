<div id="categories-container">
  <%= render "dashboard/sidebar" %>
  <div id="categories-content">
    <nav>
      <h3>Categories</h3>
      <h3><%= current_user.email %></h3>
    </nav>
    <header id="category-header">
      <div>
        <h1>Category List</h1><br>
        <h4>Count: <%= @categories.count %></h4>
      </div>
      <div class="new-category">
        <%= link_to "+ ADD A NEW CATEGORY", new_category_path, data: { turbo_frame: "modal" } %>
      </div>
    </header>
    <div id="category-list">
      <% @categories.each do |category| %>
        <div class="category-box">
          <%= link_to category do %>  
            <h1><%= category.name.upcase %></h1>
          <% end %>
          <footer>
            <%= link_to "\u270E", edit_category_path(category), data: { turbo_frame: "modal"} %>
            <%= button_to "\u{1F5D1}", category, method: :delete %>
          </footer>
        </div>
      <% end %>
    </div>
  </div>
</div>
