<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>

<table>
  <thead>
    <th>Name</th>
    <th>Description</th>
  <thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category_path(category.id) %></td>
        <td><%= link_to 'Edit', edit_category_path(category.id) %></td>
        <td><%= button_to "Delete", category_path(category), method: :delete %></td>
      <tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path %>