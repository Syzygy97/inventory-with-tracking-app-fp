<h1>Categories#edit</h1>
<p>Find me in app/views/categories/edit.html.erb</p>


<%= form_for @category, url: category_path, local: true, method: :put do |f| %>

	<p>
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %><br/>
		<%= f.text_field :description %>
		<%= f.hidden_field :id, value: @category.id %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>